{
  "compilerOptions": {
    "target": "es6",
    "lib": ["esnext"],
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "inlineSources": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "types": ["node"]
  },
  "include": [
    "src/**/*",
    "src/data/data.json",
    "dist/index.d.ts"
  ]
}